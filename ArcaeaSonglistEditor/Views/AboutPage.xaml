<Page x:Class="ArcaeaSonglistEditor.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="关于"
      Width="Auto"
      Height="Auto">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Arcaea Resource Pack Editor"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />
            
            <TextBlock Text="版本 1.0.0"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Foreground="Gray" />
        </StackPanel>
        
        <!-- 内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,20">
            <StackPanel Orientation="Vertical">
                <!-- 项目描述 -->
                <GroupBox Header="项目描述" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Arcaea Resource Pack Editor 是一个专注于 Arcaea 游戏资源包管理的 GUI 工具。"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Text="此项目为Xrcxex附属"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </GroupBox>
                
                <!-- 主要功能 -->
                <GroupBox Header="主要功能" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" FontWeight="Bold" Margin="0,0,10,0" />
                            <TextBlock Text="完整的歌曲列表编辑" />
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" FontWeight="Bold" Margin="0,0,10,0" />
                            <TextBlock Text="曲包列表管理" />
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" FontWeight="Bold" Margin="0,0,10,0" />
                            <TextBlock Text="解锁条件编辑" />
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" FontWeight="Bold" Margin="0,0,10,0" />
                            <TextBlock Text="数据验证和错误检查" />
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" FontWeight="Bold" Margin="0,0,10,0" />
                            <TextBlock Text="一键移除限制功能" />
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✓" FontWeight="Bold" Margin="0,0,10,0" />
                            <TextBlock Text="批量操作工具" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- 技术信息 -->
                <GroupBox Header="技术信息" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="目标框架:" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text=".NET 8.0" />
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="UI框架:" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="WPF" />
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="UI组件库:" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="WPF-UI" />
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="架构模式:" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="MVVM (CommunityToolkit.Mvvm)" />
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="序列化:" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="System.Text.Json" />
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="依赖注入:" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="Microsoft.Extensions.DependencyInjection" />
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- 开源协议 -->
                <GroupBox Header="开源协议" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="本项目基于 MIT 协议开源。" TextWrapping="Wrap" Margin="0,0,0,10" />
                        
                        <TextBlock Text="Copyright © 2026 雾月星辰 XingC" 
                                   TextWrapping="Wrap" Margin="0,0,0,10" />
                        
                        <TextBlock Text="Permission is hereby granted, free of charge, to any person obtaining a copy of this software and associated documentation files (the 'Software'), to deal in the Software without restriction, including without limitation the rights to use, copy, modify, merge, publish, distribute, sublicense, and/or sell copies of the Software, and to permit persons to whom the Software is furnished to do so, subject to the following conditions:"
                                   TextWrapping="Wrap"
                                   FontSize="10" Margin="0,0,0,10" />
                        
                        <TextBlock Text="The above copyright notice and this permission notice shall be included in all copies or substantial portions of the Software."
                                   TextWrapping="Wrap"
                                   FontSize="10" />
                    </StackPanel>
                </GroupBox>
                
                <!-- 致谢 -->
                <GroupBox Header="致谢" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="感谢以下项目和工具：" TextWrapping="Wrap" Margin="0,0,0,10" />
                        
                        <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                            <TextBlock Text="• SlstGen (https://github.com/bsdayo/SlstGen) - 提供了UI设计参考" Margin="0,0,0,5" />
                            <TextBlock Text="• Arcaea Bundler (https://github.com/Lost-MSth/Arcaea-Bundler) - Bundle封包工具" Margin="0,0,0,5" />
                            <TextBlock Text="• Arcaea Patch Tool - 原始项目基础" Margin="0,0,0,5" />
                            <TextBlock Text="• WPF-UI - Modern UI组件库" Margin="0,0,0,5" />
                            <TextBlock Text="• CommunityToolkit.Mvvm - MVVM工具包" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="检查更新"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="CheckForUpdates_Click" />
            
            <Button Content="项目主页"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="OpenProjectHomepage_Click" />
            
            <Button Content="关闭"
                    Width="80"
                    Height="35"
                    Click="Close_Click" />
        </StackPanel>
    </Grid>
</Page>
